---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/ContactForm.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <ContactUs
    id="form"
    title="Contactez-nous !"
    subtitle=""
    inputs={[
      { type: 'text', name: 'name', placeholder: 'Nom', required: true },
      { type: 'email', name: 'email', placeholder: 'Adresse e-mail', required: true },
    ]}
    textarea={{
      name: 'message',
      placeholder: 'Votre message',
      required: true,
    }}
    disclaimer={{
      label: 'En envoyant ce formulaire, vous acceptez d’être recontacté.',
    }}
    button="Envoyer le message"
    description="Nous vous répondrons dans les plus brefs délais."
    endpoint="https://formspree.io/f/xgvonprr"
  />

  <Features2
    title="Nos coordonnées"
    items={[
      { title: 'Téléphone', description: '06 46 06 22 51', icon: 'tabler:phone' },
      { title: 'Email', description: 'afc.jjb@outlook.fr', icon: 'tabler:mail' },
      { title: 'Siège social', description: '49 rue de l`ile Mayotte 29 000 Quimper', icon: 'tabler:map-pin' },
    ]}
  />
</Layout>
